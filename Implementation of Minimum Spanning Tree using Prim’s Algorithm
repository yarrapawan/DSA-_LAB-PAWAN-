#include <stdio.h>
#define INF 9999
int main() {
    int graph[10][10];
    int visited[10], n, i, j, noOfEdges = 0;
    int min, u = 0, v = 0, totalCost = 0;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter the adjacency matrix (use 0 for no edge):\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &graph[i][j]);
            if (graph[i][j] == 0)
                graph[i][j] = INF;
        }
    }

    for (i = 0; i < n; i++)
        visited[i] = 0;

    visited[0] = 1;

    printf("Edges in MST:\n");

    while (noOfEdges < n - 1) {
        min = INF;

        for (i = 0; i < n; i++) {
            if (visited[i]) {
                for (j = 0; j < n; j++) {
                    if (!visited[j] && graph[i][j] < min) {
                        min = graph[i][j];
                        u = i;
                        v = j;
                    }
                }
            }
        }

        visited[v] = 1;
        printf("%d - %d : %d\n", u, v, min);
        totalCost += min;
        noOfEdges++;
    }

    printf("Total cost of Minimum Spanning Tree: %d\n", totalCost);

    return 0;
}
