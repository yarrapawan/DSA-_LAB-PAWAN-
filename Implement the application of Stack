#include <stdio.h>
#include <ctype.h>

#define SIZE 100

int main() {
    char infix[SIZE], postfix[SIZE], stack[SIZE];
    int i = 0, j = 0, top = -1;
    char ch;

    printf("Enter infix expression (e.g., A+B*C): ");
    scanf("%s", infix);

    while ((ch = infix[i++]) != '\0') {
        if (isalnum(ch)) {
            postfix[j++] = ch;
        } else if (ch == '(') {
            stack[++top] = ch;
        } else if (ch == ')') {
            while (top != -1 && stack[top] != '(') {
                postfix[j++] = stack[top--];
            }
            if (top != -1 && stack[top] == '(')
                top--;  // remove '('
        } else {
            int prec;
            if (ch == '^') prec = 3;
            else if (ch == '*' || ch == '/') prec = 2;
            else prec = 1;

            while (top != -1) {
                int top_prec;
                if (stack[top] == '^') top_prec = 3;
                else if (stack[top] == '*' || stack[top] == '/') top_prec = 2;
                else if (stack[top] == '+' || stack[top] == '-') top_prec = 1;
                else top_prec = 0;

                if (top_prec >= prec)
                    postfix[j++] = stack[top--];
                else
                    break;
            }
            stack[++top] = ch;
        }
    }

    while (top != -1) {
        postfix[j++] = stack[top--];
    }

    postfix[j] = '\0';
    printf("Postfix expression: %s\n", postfix);

    return 0;
}

