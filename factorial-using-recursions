#include<stdio.h>
int fact(int num)
{
  if(num ==1 || num ==0)
  {
  	return 1;
	  }	
	  else 
	  {
	  	return num* fact(num-1);
	  }
}
int main()
{
	int num;
	printf("enter the number");
	scanf("%d",&num);
	if(num<0)
	{
		printf("fact is not defined");
	}
	else 
	{
		printf("the factorial of %d is %d", num, fact(num));
	}
}
